{
  "name": "openShorts",
  "version": "1.0",
  "description": "Free/Open source url shortener from https://nxone.co",
  "permissions": ["activeTab", "declarativeContent", "storage", "contextMenus"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/openshorts.png",
      "32": "images/openshorts.png",
      "48": "images/openshorts.png",
      "128": "images/openshorts.png"
    }
  },
  "icons": {
    "16": "images/openshorts.png",
    "32": "images/openshorts.png",
    "48": "images/openshorts.png",
    "128": "images/openshorts.png"
  },
  "manifest_version": 2
}
